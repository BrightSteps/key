<nav class='bg-white'>
  <div class='mx-auto max-w-7xl px-2 lg:px-8'>
    <div class='flex h-16 items-center justify-between'>
      <div
        class='flex'
      >
        <div class='flex shrink-0 items-center'>
          <div
            class='h-8 w-auto [&>svg]:w-auto [&>svg]:h-full [&>svg]:fill-indigo-700'
          >
            <Icons::Logo />
          </div>
        </div>
        <div class='sm:ml-7'>
          <div class='flex space-x-4'>
            {{#each this.navigationLinks as |link|}}
              <LinkTo
                class='rounded-md px-3 py-2 text-sm font-medium
                  {{link.classes}}'
                @route={{link.route}}
              >
                {{link.name}}
              </LinkTo>
            {{/each}}
          </div>
        </div>
      </div>

      <div
        class='flex items-center pr-2'
      >
        {{#if this.isAuthenticated}}
          <button
            type='button'
            {{on 'click' this.revokeTokens}}
            class='inline-flex items-center px-2 py-1 text-sm text-gray-900 hover:bg-gray-700 hover:text-white rounded-md hover:bg-indigo-700 focus:outline-none [&>svg]:w-6 [&>svg]:h-6 [&>svg]:ml-2'
          >
            {{this.revokeTokensText}}
            <Icons::Logout />
          </button>
        {{else}}
          {{#unless this.isRouteAddToken}}
            <button
              type='button'
              {{on 'click' this.addToken}}
              class='inline-flex items-center px-2 py-1 text-sm text-gray-900 hover:bg-gray-200 rounded-md focus:outline-none [&>svg]:w-6 [&>svg]:h-6 [&>svg]:ml-2'
            >
              Add a token
              <Icons::Login />
            </button>
          {{/unless}}
        {{/if}}
      </div>

    </div>
  </div>
</nav>